{
	"compilerOptions": {
		"outDir": "./lib",
		"target": "ESNext",
		"module": "esnext",
		"jsx": "react-jsx",

		"baseUrl": "./",
		"paths": { "src/*": ["src/*"] },

		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true,

		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,

		"skipLibCheck": true,
		"moduleResolution": "node",

		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,

		"noEmit": true,
		"allowJs": true,
		"esModuleInterop": true,

		"typeRoots": ["lib/**/*.d.ts", "lib/*.d.ts", "node_modules/@types"],
		"lib": ["dom", "dom.iterable", "esnext"]
	}
}
